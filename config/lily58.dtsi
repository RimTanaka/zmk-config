/ {

    left_encoder: encoder_left {
    compatible = "alps,ec11";
    label = "LEFT_ENCODER";
    a-gpios = <&pro_micro_a 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    b-gpios = <&pro_micro_a 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    resolution = <4>; // Замените значение на необходимое разрешение энкодера
};

sensors {
    compatible = "zmk,keymap-sensors";
    sensors = <&left_encoder>; // Добавьте энкодер в список сенсоров
};
right_encoder: encoder_right {
    compatible = "alps,ec11";
    label = "RIGHT_ENCODER";
    a-gpios = <&pro_micro_a 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Пример GPIO для правого энкодера
    b-gpios = <&pro_micro_a 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // Пример GPIO для правого энкодера
    resolution = <4>; // Замените значение на необходимое разрешение энкодера
};

sensors {
    compatible = "zmk,keymap-sensors";
    sensors = <&right_encoder>; // Добавьте энкодер в список сенсоров
};
}
